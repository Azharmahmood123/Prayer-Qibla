<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_gravity="center"
        android:id="@+id/containerJuzzView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:background="@color/cardview_dark_background"
        android:visibility="visible"
        android:weightSum="3">

        <TextView
            android:id="@+id/txt_eng_juzz_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Juzz"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/txt_urdu_para_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Juzz"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/txt_urdu_juzz_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Juzz"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />
    </LinearLayout>

    <LinearLayout


        android:id="@+id/ayah_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_five">
            <!--  Animation of Row of share and fave-->
            <TextView
                android:id="@+id/tv_ayah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_toRightOf="@+id/layout_ayah_no"
                android:gravity="right"
                android:lineSpacingExtra="@dimen/size_ten"
                android:text="Arabimc here"
                android:textSize="11dp" />
            <LinearLayout
                android:id="@+id/menu_options_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">

                <FrameLayout
                    android:id="@+id/child_view_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/inner_container_menu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_40sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_quran_read_share_row"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:src="@drawable/share_quran_read_row" />

                        <ImageView
                            android:id="@+id/img_quran_read_fav_row"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:src="@drawable/fav_quran_read_row" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

            <!-- **************** END ********************-->

            <LinearLayout
                android:id="@+id/layout_ayah_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_row_menu"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/side_arrow_open"
                    android:visibility="visible" />

                <RelativeLayout
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/size_five"
                    android:layout_marginRight="@dimen/size_one"
                    android:layout_marginTop="@dimen/size_ten"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:gravity="center"
                        android:layout_width="@dimen/size_twenty_five"
                        android:layout_height="@dimen/size_thirty_five"
                        android:src="@drawable/brackets"
                       />

                    <TextView
                        android:id="@+id/tv_ayah_no"
                        android:layout_width="@dimen/size_twenty_five"
                        android:layout_height="@dimen/size_thirty_five"
                        android:gravity="center"
                        android:text="555"
                        android:textColor="@color/black_light"
                        android:textSize="@dimen/text_size_twelve" />
                </RelativeLayout>
            </LinearLayout>


        </RelativeLayout>

        <TextView
            android:id="@+id/text_transliteration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:lineSpacingExtra="@dimen/size_two"
            android:textSize="14dp"
            android:textStyle="italic"
            android:typeface="serif" />

        <TextView
            android:text="Transaltion"
            android:id="@+id/text_translation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:lineSpacingExtra="@dimen/size_two"
            android:paddingTop="@dimen/_2sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:textSize="14dp"
            android:layout_marginBottom="@dimen/_8sdp"/>
    </LinearLayout>


</LinearLayout>