<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <!--drawer_menu_head_size-->
    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_125sdp"
        android:background="@color/ColorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_icon"
                    android:layout_width="@dimen/_55sdp"
                    android:layout_height="@dimen/_55sdp"
                    android:layout_centerHorizontal="true"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/img_desrcptn"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_drawer_header" />

                <TextView
                    android:id="@+id/tv_header_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_17sdp" />
            </LinearLayout>

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_header_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="@dimen/_17sdp" />

            <LinearLayout

                android:id="@+id/linear_user_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:gravity="center_vertical"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/tv_user_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:gravity="center_vertical"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content_layout_with_icons"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_fourty_five"
        android:background="@drawable/bg_row_flat">

        <ImageView
            android:id="@+id/img_menu"
            android:layout_width="@dimen/size_twenty"
            android:layout_height="@dimen/size_twenty"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_15sdp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/img_desrcptn"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_menu_1" />

        <TextView
            android:id="@+id/tv_row_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_fifteen"
            android:layout_toRightOf="@+id/img_menu"
            android:gravity="center|left"
            android:paddingLeft="@dimen/size_ten"
            android:text="Menu item"
            android:textColor="@drawable/menu_row_text_color"
            android:textSize="@dimen/_12sdp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/seprator_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_two">

        <View
            style="@style/drawer_menu_separator"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/content_layout_without_icons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_row_flat"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_row_2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_fourty_five"
            android:layout_marginLeft="@dimen/size_fifteen"
            android:gravity="center|left"
            android:paddingLeft="@dimen/size_three"
            android:textColor="@drawable/menu_row_text_color"
            android:textSize="@dimen/drawer_menu_row_text_size" />
    </LinearLayout>

    <ImageView
        android:layout_marginLeft="@dimen/_11sdp"
        android:id="@+id/fb_img"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_40sdp"
        android:adjustViewBounds="true"
        android:padding="@dimen/size_eight"
        android:scaleType="fitCenter"
        android:src="@drawable/fb"
        android:visibility="gone"
         />

</LinearLayout>