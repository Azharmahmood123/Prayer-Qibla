<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_50sdp"
    android:background="@color/actionbar_bg">


    <LinearLayout
        android:id="@+id/toolbar_btnBack"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:background="@drawable/btn_hower"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/_45sdp"
            android:layout_height="match_parent"
            android:elevation="4dp"
            android:padding="@dimen/size_fifteen"
            android:src="@drawable/cross2"
            android:id="@+id/imageView" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_toLeftOf="@+id/layout_save_settings_alarm"
        android:layout_toRightOf="@+id/toolbar_btnBack"
        android:text="@string/settings"
        android:textColor="@color/white"
        android:textSize="@dimen/_18sdp" />

    <!--    <TextView
            android:background="@drawable/btn_hower"
            android:id="@+id/iv_alarm_settings_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:elevation="4dp"
            android:padding="@dimen/_10sdp"
            android:text="@string/save"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp" />-->


    <LinearLayout
        android:id="@+id/layout_save_settings_alarm"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:elevation="4dp"
        android:background="@drawable/btn_hower"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_alarm_settings_save"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="match_parent"
            android:elevation="4dp"
            android:padding="@dimen/size_fifteen"
            android:src="@drawable/tick_white" />
    </LinearLayout>





</RelativeLayout>

