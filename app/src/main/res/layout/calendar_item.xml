<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_40sdp"
    android:background="@drawable/cell_background"
    android:orientation="vertical"
    android:splitMotionEvents="false">

    <LinearLayout
        android:id="@+id/data_cell"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:gravity="center"
        android:orientation="vertical"
        android:splitMotionEvents="false">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_event"
                android:layout_width="@dimen/_5sdp"
                android:layout_height="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_minus10sdp"
                android:background="@drawable/event_circle" />

            <TextView
                android:layout_marginLeft="@dimen/_3sdp"
                android:id="@+id/tv_hijri_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_14sdp"></TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_georgian_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"></TextView>
    </LinearLayout>

</LinearLayout>