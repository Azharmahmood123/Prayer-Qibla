<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
        <LinearLayout
            android:paddingTop="@dimen/_3sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

           <LinearLayout
               android:id="@+id/ln_fajar"
               android:orientation="horizontal"
               android:layout_width="wrap_content"
               android:layout_height="@dimen/_25sdp">
               <TextView

                   android:layout_width="wrap_content"
                   android:layout_height="@dimen/_25sdp"
                   android:text="@string/txt_dash_chart"
                   android:textColor="@color/light_gray"
                   android:textSize="@dimen/_10sdp" />
               <TextView
                   android:id="@+id/txt_fajar_status"
                   android:layout_marginTop="@dimen/_6sdp"
                   android:layout_marginLeft="@dimen/_2sdp"
                   android:background="@color/missed_color"
                   android:layout_width="@dimen/_6sdp"
                   android:layout_height="@dimen/_6sdp" />
               <TextView
                   android:layout_marginLeft="@dimen/_2sdp"
                   android:layout_width="wrap_content"
                   android:layout_height="@dimen/_25sdp"
                   android:text="@string/txt_dash_chart"
                   android:textColor="@color/light_gray"
                   android:textSize="@dimen/_10sdp" />
           </LinearLayout>
            <LinearLayout
                android:id="@+id/ln_zuhar"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp"
                    android:text="@string/txt_dash_chart"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/_10sdp" />
                <TextView
                    android:id="@+id/txt_zuhar_status"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:background="@color/missed_color"
                    android:layout_width="@dimen/_6sdp"
                    android:layout_height="@dimen/_6sdp" />
                <TextView
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp"
                    android:text="@string/txt_dash_chart"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ln_asar"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp"
                    android:text="@string/txt_dash_chart"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/_10sdp" />
                <TextView

                    android:id="@+id/txt_asar_status"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:background="@color/missed_color"
                    android:layout_width="@dimen/_6sdp"
                    android:layout_height="@dimen/_6sdp" />
                <TextView
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp"
                    android:text="@string/txt_dash_chart"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ln_magrib"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp"
                    android:text="@string/txt_dash_chart"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/_10sdp" />
                <TextView
                    android:id="@+id/txt_magrib_status"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:background="@color/missed_color"
                    android:layout_width="@dimen/_6sdp"
                    android:layout_height="@dimen/_6sdp" />
                <TextView
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp"
                    android:text="@string/txt_dash_chart"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ln_isha"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp"
                    android:text="@string/txt_dash_chart"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/_10sdp" />
                <TextView
                    android:id="@+id/txt_isha_status"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:background="@color/missed_color"
                    android:layout_width="@dimen/_6sdp"
                    android:layout_height="@dimen/_6sdp" />
                <TextView
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp"
                    android:text="@string/txt_dash_chart"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_day_name"
                    android:gravity="center"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/light_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_sun"/>
                <View
                    style="@style/view_line_light_gray"
                    android:layout_marginTop="@dimen/_5sdp" />
                <TextView
                    android:id="@+id/txt_date"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/light_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1"/>
            </LinearLayout>


        </LinearLayout>




    </LinearLayout>
